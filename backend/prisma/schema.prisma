generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Status {
  PENDING
  IN_PROGRESS
  COMPLETED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

model Card {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  status      Status   @default(PENDING)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  priority    Priority
  autor       String
}
